            <Line X1="40" Y1="50" X2="40" Y2="35" Stroke="Black" StrokeThickness="3" />

            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.5" ScaleY="0.5"></ScaleTransform>
                    <TranslateTransform x:Name="zero2move"></TranslateTransform>
