<UserControl x:Class="Primes.Options.OptionVersionInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lang="clr-namespace:Primes.Resources.lang.Options"
    Loaded="UserControl_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static lang:Options.optionabout_version}" Grid.Column="0" Grid.Row="0" Margin="7" />
        <TextBlock Name="tbVersionInfo" Grid.Column="1" Grid.Row="0" Margin="7" />
        <TextBlock Text="Build" Grid.Column="0" Grid.Row="1" Margin="7" />
        <TextBlock Name="tbBuildInfo" Grid.Column="1" Grid.Row="1" Margin="7" />
    </Grid>

</UserControl>
