<Window x:Class="Primes.WpfControls.Components.ToolTipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToolTipWindow" Height="300" Width="300"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="None"
        Visibility="Visible" AllowsTransparency="True" Opacity="0.8" WindowStartupLocation="CenterOwner" BorderThickness="0">

    <Border BorderThickness="1" CornerRadius="5" Background="LightYellow" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Name="spContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Name="lblTitle" FontSize="12" FontWeight="Bold" FontFamily="Arial">test</Label>
            <Line Name="lineSpacer" Stroke="Black" StrokeThickness="1" />
            <TextBlock Name="textBlockContent" />
        </StackPanel>
    </Border>

</Window>
