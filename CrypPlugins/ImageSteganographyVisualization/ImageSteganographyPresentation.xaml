<UserControl x:Class="ImageSteganographyVisualization.ImageSteganographyPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="150" Margin="0" Padding="0">
    <Grid Name="MainFrame" Background="White">
        <Grid Name="MainPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition  Height="100*"/>
                <RowDefinition  Height="25*"/>
            </Grid.RowDefinitions>
            <TextBlock Name="Prompt" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="10, 0"/>
        </Grid>
        <Grid Name="ExtractedHeader">
            <StackPanel Margin="10, 5" >
                <TextBlock Name="MessageLengthTB" TextWrapping="Wrap"/>
                <TextBlock Name="RedBitMask" />
                <TextBlock Name="GreenBitMask" />
                <TextBlock Name="BlueBitMask" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
