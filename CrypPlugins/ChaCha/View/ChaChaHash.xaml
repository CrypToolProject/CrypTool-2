                                    <Setter Property="Background" Value="White" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StateValues[8].Mark}" Value="True">
                                            <Setter Property="Background" Value="AliceBlue" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Viewbox>
                                <StackPanel>
