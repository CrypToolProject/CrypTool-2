<UserControl x:Class="CrypTool.Plugins.AutocorrelationFunction.AutocorrelationPresentation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:custom="clr-namespace:CrypTool.PluginBase.Utils.Graphics.Diagrams.Histogram;assembly=CrypPluginBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Viewbox>
    
    <Grid Name="Grid" Height="154">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*" />
                <ColumnDefinition Width="143*" />
                <ColumnDefinition Width="0*" />
            </Grid.ColumnDefinitions>

        <TextBlock TextAlignment="Center" FontSize="20" Foreground="DarkBlue"  FontFamily="Academy" OpacityMask="Turquoise" Text="{Loc Shift_values}" Height="20" VerticalAlignment="Bottom"></TextBlock>

        <custom:HistogramChart Name="histogram" Margin="0,0,0,19">                

        </custom:HistogramChart>

    </Grid>

    </Viewbox>
    
</UserControl>
