        <Style TargetType="{x:Type ToggleButton}" x:Key="ICMButtonStyle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsICMaster, Mode=OneWay}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed"></Setter>
                    <Setter Property="Tag" Value="{x:Null}"></Setter>
                    <Setter Property="Content" Value="{x:Null}"></Setter>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="ToolTip" Value="{Loc Show_IControlsTooltip}"></Setter>
            <Setter Property="Height" Value="16"></Setter>
            <Setter Property="Width" Value="16"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="Template" Value="{StaticResource ResourceKey=CtrlTemplate}"></Setter>
        </Style>

        <Style x:Key="WindowStyle" TargetType="{x:Type Border}">
            <Style.Triggers>
                <DataTrigger Value="False">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ResourceKey=StateFullscreenConverter}">
                            <Binding Path="State"></Binding>
                            <Binding Path="IsFullscreen"></Binding>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Height" Value="80"></Setter>
                    <Setter Property="Width" Value="80"></Setter>
                    <Setter Property="MinHeight" Value="80"></Setter>
                    <Setter Property="MinWidth" Value="80"></Setter>
                </DataTrigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ResourceKey=StateFullscreenConverter}">
                            <Binding Path="State"></Binding>
                            <Binding Path="IsFullscreen"></Binding>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Height" Value="{Binding Path=WindowHeight}"></Setter>
                    <Setter Property="Width" Value="{Binding Path=WindowWidth}"></Setter>
                    <Setter Property="MinHeight" Value="{Binding Path=ActivePresentation.MinHeight, 
                        Converter={StaticResource ResourceKey=EnsureMinHeightConverter}, ConverterParameter=150}"></Setter>
                    <Setter Property="MinWidth" Value="{Binding Path=ActivePresentation.MinWidth,  
                        Converter={StaticResource ResourceKey=EnsureMinHeightConverter}, ConverterParameter=200}"></Setter>

                    <Setter Property="MaxHeight" Value="{Binding Path=ActivePresentation.MaxHeight}"></Setter>
                    <Setter Property="MaxWidth" Value="{Binding Path=ActivePresentation.MaxWidth}"></Setter>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="{Binding Path=BackgroundBrushColor}"></Setter>
            <Setter Property="BorderBrush" Value="{Binding Path=BorderBrushColor}"></Setter>
        </Style>

        <Style x:Key="ActionBorderStyle" TargetType="{x:Type Border}">
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ResourceKey=StateFullscreenConverter}">
                            <Binding Path="State"></Binding>
                            <Binding Path="IsFullscreen"></Binding>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Visibility" Value="Visible"></Setter>
                </DataTrigger>
                <DataTrigger Value="False">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource ResourceKey=StateFullscreenConverter}">
                            <Binding Path="State"></Binding>
                            <Binding Path="IsFullscreen"></Binding>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Visibility" Value="Collapsed"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DragBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="5"></Setter>
            <Setter Property="BorderBrush" Value="Transparent"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsConnectorDragStarted}" Value="True">
                    <Setter Property="BorderBrush" Value="#99FFFFFF"></Setter>
                    <Setter Property="Background" Value="#55FFFFFF"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ContentPresenterStyle" TargetType="{x:Type ContentPresenter}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsFullscreen}" Value="True">
                    <Setter Property="Content" Value="{Binding Path=Icon, Mode=OneTime}"></Setter>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Content" Value="{Binding Path=ActivePresentation, UpdateSourceTrigger=PropertyChanged}"></Setter>
        </Style>

        <x:Array Type="{x:Type Button}" x:Key="Actions">
            <Button ToolTip="{Loc PresentationTooltip}" Style="{StaticResource ResourceKey=PresentationBtnStyle}" Click="ActionHandler">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/presentation.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"></Image>
                </Button.Tag>
                <model:BinComponentState>Presentation</model:BinComponentState>
            </Button>

            <Button ToolTip="{Loc SettingsTooltip}" Style="{StaticResource ResourceKey=SettingBtnStyle}" Click="ActionHandler">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/setting.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"></Image>
                </Button.Tag>
                <model:BinComponentState>Setting</model:BinComponentState>
            </Button>

            <Button ToolTip="{Loc LogTooltip}" Style="{StaticResource ResourceKey=ActionBasicStyle}" Click="ActionHandler">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/log.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"></Image>
                </Button.Tag>
                <model:BinComponentState>Log</model:BinComponentState>
            </Button>

            <Button ToolTip="{Loc DataTooltip}" Style="{StaticResource ResourceKey=ActionBasicStyle}" Click="ActionHandler" >
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/data.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"></Image>
                </Button.Tag>
                <model:BinComponentState>Data</model:BinComponentState>
            </Button>
            
            <Button ToolTip="{Loc HelpTooltip}" Style="{StaticResource ResourceKey=ActionBasicStyle}" Click="ActionHandler">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/help.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"></Image>
                </Button.Tag>
                <sys:String>Info</sys:String>
            </Button>
        </x:Array>

        <x:Array Type="{x:Type ButtonBase}" x:Key="Operations">
            <ToggleButton x:Name="IControlButton" Style="{StaticResource ResourceKey=ICMButtonStyle}" IsChecked="{Binding Path=IsICPopUpOpen, Mode=TwoWay}">
                <ToggleButton.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/thunder.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"/>
                </ToggleButton.Tag>
            </ToggleButton>

            <!--<Button Style="{StaticResource ResourceKey=RepeatableButtonStyle}" Click="RepeatHandler"></Button>-->

            <Button Style="{StaticResource ResourceKey=OperationMaxMinStyle}" Click="ActionHandler"></Button>

            <Button Style="{StaticResource ResourceKey=OperationFullscreenStyle}" Click="OpenClickHandler">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/full.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"/>
                </Button.Tag>
            </Button>

            <Button Style="{StaticResource ResourceKey=OperationCloseStyle}" Click="CloseClick">
                <Button.Tag>
                    <Image Source="/WorkspaceManager;component/View/Images/ComponentIcons/delete.png" HorizontalAlignment="Center" SnapsToDevicePixels="True"/>
                </Button.Tag>
            </Button>
        </x:Array>

