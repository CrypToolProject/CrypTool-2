      <bin:WidthConverter x:Key="WidthConverter"></bin:WidthConverter>
        
        <Style x:Key="IconPresentationStyle" TargetType="Image">
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Path=State, Mode=OneWay}">
                            <Condition.Value>
                                <model:BinComponentState>Min</model:BinComponentState>
                            </Condition.Value>
                        </Condition>

                        <Condition Binding="{Binding Path=HasComponentPresentation, Mode=OneWay}" Value="True"></Condition>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Visibility" Value="Visible"></Setter>
                </MultiDataTrigger>
            </Style.Triggers>
