    </UserControl.Resources>
    
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Style="{StaticResource ResourceKey=SelectGridStyle}" RenderTransformOrigin="0.5,0.5" Margin="0" Background="#88FFFFFF" IsHitTestVisible="False">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Opacity="0.35"></DropShadowEffect>
            </Grid.Effect>
            <Path Data="M 0,0 L 0,5 L 0,0 L 5,0 L 0,0" StrokeThickness="2" Stroke="#666" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2"></Path>
            <Path Data="M 5,5 L 0,5 L 5,5 L 5,0 L 5,5" StrokeThickness="2" Stroke="#666" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="2"></Path>
            <Path Data="M 0,5 L 0,0 L 0,5 L 5,5 L 0,5" StrokeThickness="2" Stroke="#666" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="2"></Path>
            <Path Data="M 5,0 L 0,0 L 5,0 L 5,5 L 5,0" StrokeThickness="2" Stroke="#666" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="2"></Path>
        </Grid>


        <Thumb x:Name="ScaleThumb" Style="{StaticResource ResourceKey=ScaleThumb}"  Margin="0,0,5,5" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                               Cursor="SizeNWSE" DragDelta="ScaleDragDeltaHandler"></Thumb>
        
        <!--<Thumb x:Name="ScaleThumb2" Style="{StaticResource ResourceKey=ScaleThumb}"  Margin="0,5,5,0" VerticalAlignment="Top" HorizontalAlignment="Right"
                               Cursor="SizeNWSE" DragDelta="ScaleDragDeltaHandler">
            <Thumb.LayoutTransform>
                <RotateTransform Angle="-90"></RotateTransform>
            </Thumb.LayoutTransform>
        </Thumb>
        
        <Thumb x:Name="ScaleThumb3" Style="{StaticResource ResourceKey=ScaleThumb}"  Margin="5,0,0,5" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                               Cursor="SizeNWSE" DragDelta="ScaleDragDeltaHandler">
            <Thumb.LayoutTransform>
                <RotateTransform Angle="-270"></RotateTransform>
            </Thumb.LayoutTransform>
        </Thumb>

        <Thumb x:Name="ScaleThumb4" Style="{StaticResource ResourceKey=ScaleThumb}"  Margin="5,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"
                               Cursor="SizeNWSE" DragDelta="ScaleDragDeltaHandler">
            <Thumb.LayoutTransform>
                <RotateTransform Angle="-180"></RotateTransform>
            </Thumb.LayoutTransform>
        </Thumb>

        <Grid RenderTransformOrigin="0.5,0.5" Margin="0" IsHitTestVisible="False">
            <Rectangle Style="{StaticResource ResourceKey=ErrorEllStyle}">
                <Rectangle.Effect>
                    <BlurEffect Radius="30"></BlurEffect>
                </Rectangle.Effect>
            </Rectangle>
