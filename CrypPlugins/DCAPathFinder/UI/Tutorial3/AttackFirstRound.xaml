<UserControl x:Class="DCAPathFinder.UI.Tutorial3.AttackFirstRound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DCAPathFinder.UI.Tutorial3"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid Height="350" Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" Grid.Column="0" IsReadOnly="True" Background="Transparent" BorderThickness="0"
                     FontFamily="Courier New" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                     Margin="10,0,10,0">
            <FlowDocument>
                <Paragraph TextAlignment="Center">
                    <Run Text="{Loc Tutorial3AttackFirstRoundHeaderRun1}" /><Run Text="{Loc Tutorial3AttackFirstRoundHeaderRun2}" BaselineAlignment="Subscript" FontSize="15" /><Run Text="{Loc Tutorial3AttackFirstRoundHeaderRun3}" /><Run Text="{Loc Tutorial3AttackFirstRoundHeaderRun4}" BaselineAlignment="Subscript" FontSize="15" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <RichTextBox Grid.Row="1" Grid.Column="0" IsReadOnly="True" Background="Transparent" BorderThickness="0"
                     FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Loc Tutorial3AttackFirstRoundContent1Run1}" /><Run Text="{Loc Tutorial3AttackFirstRoundContent1Run2}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial3AttackFirstRoundContent1Run3}" /><Run Text="{Loc Tutorial3AttackFirstRoundContent1Run4}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial3AttackFirstRoundContent1Run5}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox Grid.Row="2" Grid.Column="0" IsReadOnly="True" Background="Transparent" BorderThickness="0"
                     FontFamily="Courier New" FontSize="12" Margin="10,0,10,0">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Loc Tutorial3AttackFirstRoundContent2Run1}" /><Run Text="{Loc Tutorial3AttackFirstRoundContent2Run2}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial3AttackFirstRoundContent2Run3}" /><Run Text="{Loc Tutorial3AttackFirstRoundContent2Run4}" BaselineAlignment="Subscript" FontSize="10" /><Run Text="{Loc Tutorial3AttackFirstRoundContent2Run5}" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>